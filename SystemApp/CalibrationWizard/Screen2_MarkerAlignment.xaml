<Window x:Class="KinectCalibrationWPF.CalibrationWizard.Screen2_MarkerAlignment"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Calibration Wizard - Screen 2: Sensor Alignment" Height="700" Width="1000" WindowStartupLocation="CenterScreen" Background="#F5F5F5">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="#2196F3" Padding="20">
			<StackPanel>
				<TextBlock Text="Calibration Wizard - Screen 2" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<TextBlock Text="Place physical markers in view. Adjust settings if needed, then click 'Find Markers'." FontSize="14" Foreground="#E3F2FD" HorizontalAlignment="Center" Margin="0,5,0,0"/>
			</StackPanel>
		</Border>
		<Grid Grid.Row="1" Margin="20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<Border Grid.Row="0" Background="#2C2C2C" Margin="10">
						<Grid>
							<Image x:Name="CameraFeedImage" Stretch="Uniform"/>
							<Canvas x:Name="MarkersOverlay" Background="Transparent"/>
						</Grid>
					</Border>
					<Border Grid.Row="1" Background="#F0F0F0" Padding="10">
						<TextBlock x:Name="CameraStatusText" Text="Camera: Initializing..." HorizontalAlignment="Center" FontSize="12"/>
					</Border>
				</Grid>
			</Border>
			<Border Grid.Column="1" Background="White" CornerRadius="8" Margin="10,0,0,0">
				<StackPanel Margin="20">
					<TextBlock Text="Controls" FontSize="16" FontWeight="Bold" Foreground="#424242"/>
					<Button x:Name="HideCameraButton" Content="Hide Camera View" Style="{StaticResource WizardButtonStyle}" Margin="0,10,0,10" Click="HideCameraButton_Click"/>
					<GroupBox Header="Marker Controllers" Margin="0,10,0,10">
						<StackPanel>
							<UniformGrid Columns="2" Rows="4" Margin="0,10,0,0">
								<TextBlock Text="Marker 1 X" VerticalAlignment="Center"/>
								<Slider x:Name="M1X" Minimum="0" Maximum="1920" Value="100" ValueChanged="MarkerPositionSlider_ValueChanged"/>
								<TextBlock Text="Marker 1 Y" VerticalAlignment="Center"/>
								<Slider x:Name="M1Y" Minimum="0" Maximum="1080" Value="100" ValueChanged="MarkerPositionSlider_ValueChanged"/>
								<TextBlock Text="Marker 2 X" VerticalAlignment="Center"/>
								<Slider x:Name="M2X" Minimum="0" Maximum="1920" Value="1820" ValueChanged="MarkerPositionSlider_ValueChanged"/>
								<TextBlock Text="Marker 2 Y" VerticalAlignment="Center"/>
								<Slider x:Name="M2Y" Minimum="0" Maximum="1080" Value="100" ValueChanged="MarkerPositionSlider_ValueChanged"/>
								<TextBlock Text="Marker 3 X" VerticalAlignment="Center"/>
								<Slider x:Name="M3X" Minimum="0" Maximum="1920" Value="1820" ValueChanged="MarkerPositionSlider_ValueChanged"/>
								<TextBlock Text="Marker 3 Y" VerticalAlignment="Center"/>
								<Slider x:Name="M3Y" Minimum="0" Maximum="1080" Value="980" ValueChanged="MarkerPositionSlider_ValueChanged"/>
								<TextBlock Text="Marker 4 X" VerticalAlignment="Center"/>
								<Slider x:Name="M4X" Minimum="0" Maximum="1920" Value="100" ValueChanged="MarkerPositionSlider_ValueChanged"/>
								<TextBlock Text="Marker 4 Y" VerticalAlignment="Center"/>
								<Slider x:Name="M4Y" Minimum="0" Maximum="1080" Value="980" ValueChanged="MarkerPositionSlider_ValueChanged"/>
							</UniformGrid>
						</StackPanel>
					</GroupBox>
					<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
						<TextBlock Text="Marker Size" VerticalAlignment="Center" Margin="0,0,10,0"/>
						<Slider x:Name="MarkerSizeSlider" Minimum="0.5" Maximum="3.0" Value="1.0" Width="200" ValueChanged="MarkerSizeSlider_ValueChanged"/>
					</StackPanel>
					<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
						<TextBlock Text="Camera Exposure" VerticalAlignment="Center" Margin="0,0,10,0"/>
						<Slider x:Name="CameraExposureSlider" Minimum="0" Maximum="1" Value="0.5" Width="200"/>
					</StackPanel>
					<Button x:Name="FindMarkersButton" Content="Find Markers" Margin="0,20,0,0" Style="{StaticResource WizardButtonStyle}" Click="FindMarkersButton_Click"/>
					<Button x:Name="CalibrateButton" Content="Calibrate" Margin="0,10,0,0" Style="{StaticResource WizardButtonStyle}" IsEnabled="False" Click="CalibrateButton_Click"/>
					<TextBlock x:Name="StatusText" Text="Status: Not Calibrated" Margin="0,20,0,0" Foreground="#B71C1C"/>
					<Button x:Name="NextButton" Content="Next" Margin="0,20,0,0" Style="{StaticResource WizardButtonStyle}" IsEnabled="False" Click="NextButton_Click"/>
					<Button x:Name="CancelButton" Content="Cancel" Margin="0,10,0,0" Style="{StaticResource WizardButtonStyle}" Background="#F44336" Click="CancelButton_Click"/>
				</StackPanel>
			</Border>
		</Grid>
		<Border Grid.Row="2" Background="#424242" Padding="10">
			<TextBlock Text="Screen 2 of 3: Sensor Alignment" Foreground="White" HorizontalAlignment="Center" FontSize="12"/>
		</Border>
	</Grid>
</Window>
